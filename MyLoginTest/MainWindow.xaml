<Window x:Class="MyLoginTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyLoginTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Username:" Margin="10" />
        <TextBox x:Name="txtUsername" Grid.Row="1" Margin="10" KeyDown="TextBox_KeyDown" />

        <Label Grid.Row="2" Content="Password:" Margin="10" />
        <PasswordBox x:Name="txtPassword" Grid.Row="3" Margin="10" KeyDown="PasswordBox_KeyDown" />

        <Button x:Name="btnLogin_CHANGE" Grid.Row="4" Content="Login" Margin="10" Click="btnLogin_Click" />

    </Grid>
</Window>
